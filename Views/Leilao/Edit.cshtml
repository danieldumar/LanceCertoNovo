@model LanceCerto.WebApp.Models.Leilao

@{
    ViewData["Title"] = "Editar Leilão";
}

<h2 class="mb-4">Editar Leilão</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="LeilaoId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="ImovelId" class="form-label">Imóvel</label>
                <select asp-for="ImovelId" class="form-control" asp-items="ViewBag.ImovelId"></select>
                <span asp-validation-for="ImovelId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VencedorId" class="form-label">Vencedor (ID)</label>
                <select asp-for="VencedorId" class="form-control" asp-items="ViewBag.VencedorId"></select>
                <span asp-validation-for="VencedorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InicioEm" class="form-label">Início do Leilão</label>
                <input asp-for="InicioEm" class="form-control" type="datetime-local" />
                <span asp-validation-for="InicioEm" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FimEm" class="form-label">Fim do Leilão</label>
                <input asp-for="FimEm" class="form-control" type="datetime-local" />
                <span asp-validation-for="FimEm" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label">Status</label>
                <input asp-for="Status" class="form-control" placeholder="PENDENTE, ATIVO ou ENCERRADO" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="MaiorLanceAtual" class="form-label">Maior Lance Atual</label>
                <input asp-for="MaiorLanceAtual" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MaiorLanceAtual" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}