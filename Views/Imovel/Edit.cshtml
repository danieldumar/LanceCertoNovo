@model LanceCerto.WebApp.Models.Imovel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Imóvel";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="ImovelId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">@Html.DisplayNameFor(m => m.Titulo)</label>
        <input asp-for="Titulo" class="form-control" required autocomplete="off" placeholder="Exemplo: Apartamento com 2 suítes" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">@Html.DisplayNameFor(m => m.Descricao)</label>
        <textarea asp-for="Descricao" class="form-control" rows="4" required placeholder="Descreva os detalhes do imóvel..."></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tipo" class="form-label">@Html.DisplayNameFor(m => m.Tipo)</label>
        <select asp-for="Tipo" class="form-select" asp-items="@(ViewData["Tipos"] as List<SelectListItem>)" required>
            <option value="">Selecione o Tipo do Imóvel</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco" class="form-label">@Html.DisplayNameFor(m => m.Endereco)</label>
        <input asp-for="Endereco" class="form-control" required autocomplete="off" placeholder="Rua Exemplo, 123" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cidade" class="form-label">@Html.DisplayNameFor(m => m.Cidade)</label>
        <input asp-for="Cidade" class="form-control" required autocomplete="off" placeholder="Exemplo: São Paulo" />
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label">@Html.DisplayNameFor(m => m.Estado)</label>
        <select asp-for="Estado" class="form-select" asp-items="@(ViewData["Estados"] as List<SelectListItem>)" required>
            <option value="">Selecione a Unidade Federativa</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PrecoMinimo" class="form-label">@Html.DisplayNameFor(m => m.PrecoMinimo)</label>
        <input asp-for="PrecoMinimo" class="form-control" type="number" step="0.01" min="0" required placeholder="Exemplo: 180000.00" />
        <span asp-validation-for="PrecoMinimo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">@Html.DisplayNameFor(m => m.Status)</label>
        <select asp-for="Status" class="form-select" asp-items="@(ViewData["StatusList"] as List<SelectListItem>)" required>
            <option value="">Selecione o Status do Imóvel</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImagemUrl" class="form-label">@Html.DisplayNameFor(m => m.ImagemUrl)</label>
        <input asp-for="ImagemUrl" class="form-control" placeholder="https://exemplo.com/imagem.jpg" autocomplete="off" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>

    <div class="d-flex flex-wrap gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}